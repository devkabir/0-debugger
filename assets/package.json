{
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-prefix-selector": "^2.1.0",
    "tailwindcss": "^3.4.14"
  },
  "scripts": {
    "build:bar": "postcss css/bar.css -o css/bar.css",
    "watch:bar": "tailwindcss -c tailwind.bar.config.js -o css/bar.css --watch",
    "dev:bar": "concurrently \"npm run watch:bar\" \"npm run build:bar\"",
    "build:page": "postcss temp/page.css -o css/page.css --watch",
    "watch:page": "tailwindcss -c tailwind.page.config.js -o css/page.css --watch",
    "dev:page": "concurrently \"npm run watch:page\" \"npm run build:page\"",
    "dev": "concurrently \"npm run dev:bar\" \"npm run dev:page\""
  }
}